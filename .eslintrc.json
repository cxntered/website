{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier",
		"next/core-web-vitals"
	],
	"overrides": [],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"no-unused-vars": "off",
		"no-redeclare": "off",
		"no-inner-declarations": "off",
		"handle-callback-err": "off",
		"max-nested-callbacks": [
			"error",
			{
				"max": 4
			}
		],
		"max-statements-per-line": [
			"error",
			{
				"max": 2
			}
		],
		"no-console": "off",
		"no-empty-function": "error",
		"no-lonely-if": "error",
		"prefer-const": "error",
		"quotes": [
			"error",
			"double",
			{ "avoidEscape": true, "allowTemplateLiterals": false }
		],
		"spaced-comment": "error",
		"yoda": "error"
	}
}
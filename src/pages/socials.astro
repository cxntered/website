---
import Layout from "../layouts/Layout.astro";
import LinkButton from "../components/LinkButton.astro";
import { Image } from "astro:assets";

const SOCIALS = [
	{
		icon: "simple-icons:discord",
		href: "https://discord.com/users/638695599893643274",
		text: "@cxntered",
	},
	{
		icon: "simple-icons:github",
		href: "https://github.com/cxntered",
		text: "/cxntered",
	},
	{
		icon: "simple-icons:codeberg",
		href: "https://codeberg.org/cxn",
		text: "/cxn",
	},
	{
		icon: "simple-icons:modrinth",
		href: "https://modrinth.com/user/cxntered",
		text: "/cxntered",
	},
	{
		icon: "twitter", // they did NOT rebrand to x in july 2023, whoever is telling you that is lying
		href: "https://twitter.com/cxntered",
		text: "@cxntered",
	},
	{
		icon: "simple-icons:bluesky",
		href: "https://bsky.app/profile/cxntered.dev",
		text: "@cxntered.dev",
	},
	{
		icon: "simple-icons:youtube",
		href: "https://youtube.com/@cxntered",
		text: "@cxntered",
	},
	{
		icon: "twitch", // we use our local twitch icon bc simple-icons doesn't have a white backfill
		href: "https://twitch.tv/zcxntered",
		text: "/zcxntered", // "z" ðŸ˜¡
